<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%-include("./partials/head.ejs")%>
</head>

<body>
  <%-include("./partials/navbar.ejs")%>

  <% if (drugItems.length > 0) { %>
  <% drugItems.forEach(drug => { %>
    <% console.log(drug)%>
    <div class="container px-4 py-5" id="icon-grid">
      

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5">
        <div class="col d-flex align-items-start">
          <div>
            <h4 class="fw-bold mb-0">
              <%= drug.name %>
            </h4>
            <p><%= drug.use %></p>
          </div>
        </div>
        <div class="col d-flex align-items-start">
          <div>
            <h4 class="fw-bold mb-0">Warnings</h4>
            <p><%= drug.warning%> </p>
          </div>
        </div>
        <div class="col d-flex align-items-start">

          <div>
            <h4 class="fw-bold mb-0">Dosage</h4>
            <p><%= drug.dosage %></p>
          </div>
        </div>
        <div class="col d-flex align-items-start">
          <div>
            <h4 class="fw-bold mb-0">What to avoid</h4>
            <p><%= drug.avoid %></p>
          </div>
        </div>
        <div class="col d-flex align-items-start">
          <div>
            <h4 class="fw-bold mb-0">Side effects</h4>
            <p><%= drug.effects %></p>
          </div>
        </div>
      </div>

    </div>

  <% }); %>
  <% } else { %>
    <div class="container">
      <h1 class="mt-5 pt-5 lead-1">MediBase is currently empty, please add an item through MediSearch to make use of MediBase</h1>

    </div>
  <%} %>

  <%-include("./partials/footer.ejs")%>
</body>

</html>
